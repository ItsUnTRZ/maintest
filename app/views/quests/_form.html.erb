<%= form_with(model: quest, class: "flex gap-3") do |form| %>
  <%= form.text_field :name, class: "flex-1 border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500", placeholder: "Enter quest name..." %>
  <%= form.submit "Add Quest", class: "bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700 cursor-pointer transition-colors" %>
<% end %>
