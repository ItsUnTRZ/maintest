<div class="min-h-screen bg-gradient-to-br from-purple-500 to-indigo-600 py-8">
  <div class="max-w-2xl mx-auto px-4">
    <div class="bg-white rounded-xl shadow-lg p-6">
      <h1 class="text-3xl font-bold text-gray-800 mb-6">My Quests</h1>

      <%= turbo_frame_tag "quest_form" do %>
        <%= render "form", quest: Quest.new %>
      <% end %>

      <ul id="quests" class="mt-6 space-y-3">
        <% @quests.each do |quest| %>
          <%= render quest %>
        <% end %>
      </ul>

      <% if @quests.empty? %>
        <p id="empty_state" class="text-gray-400 text-center mt-6">No quests yet. Add one above!</p>
      <% end %>
    </div>
  </div>
</div>
