<div class="min-h-screen bg-gradient-to-br from-purple-500 to-indigo-600 py-8">
  <div class="max-w-2xl mx-auto px-4">
    <!-- Profile Section -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6 text-center">
      <h1 class="text-2xl font-bold text-gray-800">Your Name</h1>
      <p class="text-gray-500 mt-2">Student ID: 123456</p>
      <p class="text-gray-400 text-sm mt-1">Quest Management System</p>
      <%= link_to "View Brag Document", brag_path, class: "text-indigo-600 hover:text-indigo-800 text-sm mt-3 inline-block" %>
    </div>

    <!-- Quests Section -->
    <div class="bg-white rounded-xl shadow-lg p-6">
      <h2 class="text-xl font-bold text-gray-800 mb-4">My Quests</h2>

      <%= turbo_frame_tag "quest_form" do %>
        <%= render "form", quest: Quest.new %>
      <% end %>

      <ul id="quests" class="mt-6 space-y-3">
        <% @quests.each do |quest| %>
          <%= render quest %>
        <% end %>
      </ul>

      <% if @quests.empty? %>
        <p id="empty_state" class="text-gray-400 text-center mt-6">No quests yet. Add one above!</p>
      <% end %>
    </div>
  </div>
</div>
