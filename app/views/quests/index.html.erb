<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 py-8 px-4">
  <div class="max-w-4xl mx-auto">
    <!-- Profile Section -->
    <div class="bg-white rounded-2xl shadow-xl p-8 mb-8 border border-gray-100">
      <div class="flex flex-col md:flex-row items-center md:items-start gap-6">
        <div class="flex-shrink-0">
          <%= image_tag "profile.jpg", class: "w-32 h-32 rounded-full object-cover border-4 border-indigo-200 shadow-lg", alt: "Profile picture" %>
        </div>
        <div class="flex-1 text-center md:text-left">
          <h1 class="text-4xl font-bold text-gray-900 mb-2 bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
            Teeratorn Raksamuang
          </h1>
          <p class="text-gray-600 mb-4 text-lg">
            A passionate developer building amazing things.
          </p>
          <div class="mt-6">
            <%= link_to brag_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-lg shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 hover:from-indigo-700 hover:to-purple-700" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              My Brag Document
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Quest Section -->
    <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
      <h2 class="text-3xl font-bold text-gray-900 mb-6 flex items-center">
        <svg class="w-8 h-8 mr-3 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
        </svg>
        My Quests
      </h2>
      
      <!-- New Quest Form -->
      <div class="mb-8">
        <%= turbo_frame_tag "new_quest_form" do %>
          <%= render "form", quest: @quest %>
        <% end %>
      </div>

      <!-- Quest List -->
      <div class="space-y-4">
        <%= turbo_frame_tag "quests" do %>
          <% if @quests.any? %>
            <%= render partial: "quest", collection: @quests, as: :quest %>
          <% else %>
            <div id="empty_state" class="text-center py-12 text-gray-500">
              <svg class="w-16 h-16 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
              <p class="text-lg">No quests yet. Create your first quest above!</p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
