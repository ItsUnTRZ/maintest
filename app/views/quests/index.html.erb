<div class="max-w-2xl mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">My Quests</h1>

  <%= link_to "New Quest", new_quest_path, class: "bg-blue-500 text-white px-4 py-2 rounded" %>

  <ul class="mt-4 space-y-2">
    <% @quests.each do |quest| %>
      <li class="border p-3 rounded flex justify-between items-center">
        <%= link_to quest.name, quest_path(quest) %>
        <div class="space-x-2">
          <%= link_to "Edit", edit_quest_path(quest), class: "text-blue-500" %>
          <%= link_to "Delete", quest_path(quest), data: { turbo_method: :delete }, class: "text-red-500" %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
