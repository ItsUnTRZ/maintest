<div class="max-w-2xl mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">My Quests</h1>

  <%= turbo_frame_tag "quest_form" do %>
    <%= render "form", quest: Quest.new %>
  <% end %>

  <ul id="quests" class="mt-4 space-y-2">
    <% @quests.each do |quest| %>
      <%= render quest %>
    <% end %>
  </ul>

  <% if @quests.empty? %>
    <p id="empty_state" class="text-gray-500 mt-4">No quests yet. Add one above!</p>
  <% end %>
</div>
