<%= turbo_frame_tag quest do %>
  <li id="<%= dom_id(quest) %>" class="border p-3 rounded flex justify-between items-center">
    <%= link_to quest.name, quest_path(quest) %>
    <div class="space-x-2">
      <%= link_to "Edit", edit_quest_path(quest), class: "text-blue-500" %>
      <%= link_to "Delete", quest_path(quest), data: { turbo_method: :delete }, class: "text-red-500" %>
    </div>
  </li>
<% end %>
