<%= turbo_frame_tag quest do %>
  <li id="<%= dom_id(quest) %>" class="<%= quest.is_done? ? 'bg-green-50 border-green-200' : 'bg-gray-50 border-gray-200' %> border p-4 rounded-lg flex justify-between items-center hover:shadow-md transition-shadow">
    <div class="flex items-center space-x-3">
      <%= form_with model: quest, method: :patch, data: { controller: "checkbox" } do |f| %>
        <%= f.check_box :is_done, data: { action: "change->checkbox#submit" }, class: "w-5 h-5 rounded" %>
      <% end %>
      <span class="<%= quest.is_done? ? 'line-through text-gray-400' : 'text-gray-700' %>">
        <%= link_to quest.name, quest_path(quest), class: "hover:text-indigo-600" %>
      </span>
    </div>
    <div>
      <%= link_to "Delete", quest_path(quest), data: { turbo_method: :delete }, class: "text-red-400 hover:text-red-600" %>
    </div>
  </li>
<% end %>
